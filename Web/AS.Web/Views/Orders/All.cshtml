@* search *@
<form method="post" asp-controller="Orders" asp-action="All">
    <div class="row form-group">
        <input type="text" class="form-control input" name="searchText" id="searchText" placeholder="Search Orders">
        <button type="submit" class="btn"><i class="fas fa-search"></i></button>
    </div>
</form>
@* end search *@

<div class="mt-3 mb-5">
    <h1 class="text-center">All Orders</h1>
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1 begin">#</th>
                <th class="col-md-4 order_id">Order ID</th>
                <th class="col-md-2 orderer">Orderer</th>
                <th class="col-md-2 product">Product</th>
                <th class="col-md-2 ordered_on">Ordered On</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="row">
                    <th class="col-md-1 begin2">@(i + 1)</th>
                    <td class="col-md-4 order_id2">@Model[i].Id</td>
                    <td class="col-md-2 orderer2">@Model[i].Orderer</td>
                    <td class="col-md-2 product2">@Model[i].Product</td>
                    <td class="col-md-2 ordered_on2">@Model[i].OrderedOn</td>
                </tr>
            }
        </tbody>
    </table>
</div>
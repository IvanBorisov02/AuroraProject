@using AS.Web.Models
@model ProductHomeViewModel


<head>

    <style>

        .begin h2 {
            position: relative;
            left: 550px;
            display: inline;
        }

        .admin {
            position: relative;
            left: 270px;
            top: 60px;
            font-weight: normal;
            letter-spacing: 2px;
            display: inline;
        }

        .nonAdmin {
            display: inline;
            position: relative;
            top: 70px;
            left: 210px;
            font-weight: normal;
            letter-spacing: 2px;
        }

        div.gallery {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 180px;
            height: 300px;
        }

            div.gallery:hover {
                border: 1px solid #777;
            }

            div.gallery img {
                width: 100%;
                height: 50%;
            }

        div.desc {
            padding: 15px;
            text-align: center;
        }

        /*.imageP {
            width: 300px;
            height: 200px;
        }*/

        .all {
            position: relative;
            top: 140px;
            left: 100px;
        }

        .gallery h5 {
            text-align: center;
            color: black;
            font-size: 15px;
            letter-spacing: 1.5px;
        }

        .gallery h6 {
            text-align: center;
            color: black;
            font-size: 15px;
            letter-spacing: 1.5px;
        }
    </style>

</head>

<div class="mt-3 mb-5">
    <div class="container-fluid text-center begin">
        <h2>Welcome, @this.User.Identity.Name!</h2>
        @if (this.User.IsInRole("Admin"))
        {
            <h4 class="admin">Enjoy your work today!</h4> }
        else
        {
            <h4 class="nonAdmin">Feel free to view and order any of our products.</h4>}
    </div>
    <div class="container-fluid product-holder">
        <div class="container-fluid product-holder all">
            @if (Model != null)
            {
                @foreach (ProductViewModel product in Model.Products)
                {
                    <div class="row d-flex justify-content-around mt-4">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="product col-md-2 rounded-top rounded-bottom px-3">
                            <div class="gallery">
                                <img src="~/Images/@product.ImageUrl" width="300" height="200" />
                                <h5 class="text-center mt-3">@product.Name</h5>
                                <h6 class="text-center text-black-50 mb-3">$@product.Price.ToString("F2")</h6>
                            </div>
                        </a>
                    </div>
                }
            }

        </div>
    </div>
</div>
@if (Model.Pager.PagesCount > 1)
{
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
}

@using AS.Web.Models
@model ProductHomeViewModel


<head>

    <style>

        

        .welcome {
            color: black;
            font-weight: normal;
            letter-spacing: 3px;
        }

        .begin h2 {
            position: relative;
            left: 450px;
            bottom: 70px;
            display: inline;
        }

        .admin {
            position: relative;
            left: 130px;
            font-weight: normal;
            letter-spacing: 2px;
            display: inline;
        }

        .nonAdmin {
            display: inline;
            position: relative;
            top: 70px;
            left: 210px;
            font-weight: normal;
            letter-spacing: 2px;
        }

        div.gallery {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 180px;
            height: 300px;
        }

            div.gallery:hover {
                border: 1px solid #777;
            }

            div.gallery img {
                width: 100%;
                height: 50%;
            }

        div.desc {
            padding: 15px;
            text-align: center;
        }

        /*.imageP {
            width: 300px;
            height: 200px;
        }*/

        .all {
            position: relative;
            top: 140px;
            left: 100px;
        }

        .gallery h5 {
            text-align: center;
            color: black;
            font-size: 15px;
            letter-spacing: 1.5px;
        }

        .gallery h6 {
            text-align: center;
            color: black;
            font-size: 15px;
            letter-spacing: 1.5px;
        }

        .pagination {
            position: relative;
            top: 80px;
            right: 280px;
        }

        #page-item {
            display: inline-block;
            margin-right: 40px;
        }

        .page-link {
            text-decoration: none;
            color: black;
            font-size: 22px;
            text-decoration-line: underline;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        .slideshow {
            width: 625px;
            margin: 0 auto;
            overflow: hidden;
            border: solid 1px white;
            position: relative;
            bottom: 160px;
        }

.slideshow-container {
  width: 2500px;
  font-size: 0;
  transition: 1s ease;
  height: 225px;
}

.slideshow-container:hover {
  animation-play-state: paused;
}

img, .text-container {
  width: 625px;
  height: 350px;
  display: inline-block;
  font-size: 16px;
  text-align: center;
}

.text-container {
  height: 225px;
  position: relative;
}


p {
  position: relative;
  top: -45%;
  padding: 5px;
}

.slide {
  animation: slide 24s ease infinite;
}

@@keyframes slide {
  0% {
    transform: translateX(0%);
  }

  12.5% {
    transform: translateX(0%);
  }

  25% {
    transform: translateX(-25%);
  }

  37.5% {
    transform: translateX(-25%);
  }

  50% {
    transform: translateX(-50%);
  }

  62.5% {
    transform: translateX(-50%);
  }

  75% {
    transform: translateX(-75%);
  }

  87.5% {
    transform: translateX(-75%);
  }

  99% {
    transform: translateX(-75%);
  }

  100% {
    transform: translateX(0);
  }
}
    </style>

</head>

<section class="slideshow">
    <div class="slideshow-container slide">
        <img src="~/css/Pictures/1 (1).jpg" />
        <img src="~/css/Pictures/1 (2).jpg" />
        <img src="~/css/Pictures/1 (3).jpg" />
    </div>
</section>

<div class="mt-3 mb-5">
    <div class="container-fluid text-center begin">
        <h2 class="welcome">Welcome, @this.User.Identity.Name!</h2>
        @if (this.User.IsInRole("Admin"))
        {
            <h4 class="admin">Enjoy your work today!</h4> }
        else
        {
            <h4 class="nonAdmin">Feel free to view and order any of our products.</h4>}
    </div>
    <div class="container-fluid product-holder">
        <div class="container-fluid product-holder all">
            @if (Model != null)
            {
                @foreach (ProductViewModel product in Model.Products)
                {
                    <div class="row d-flex justify-content-around mt-4">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="product col-md-2 rounded-top rounded-bottom px-3">
                            <div class="gallery">
                                <img src="~/Images/@product.ImageUrl" width="300" height="200" />
                                <h5 class="text-center mt-3">@product.Name</h5>
                                <h6 class="text-center text-black-50 mb-3">$@product.Price.ToString("F2")</h6>
                            </div>
                        </a>
                    </div>
                }
            }

        </div>
    </div>
</div>
@if (Model.Pager.PagesCount > 1)
{
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li id="page-item" class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
}

@model ProductEmptyViewModel

<head>

    <style>

        .of {
            display: inline;
            position: relative;
            left: 450px;
            font-size: 23px;
            font-weight: normal;
            letter-spacing: 3px;
        }

    </style>

</head>


<div class="mt-3 mb-5">
    <div class="container-fluid text-center">
        @if (Model.CategoryName != "Other")
        {
            <h4 class="of">We are sorry, products of @Model.CategoryName.ToLower() are sold.</h4>
        }
        else
        {
            <h4>We are sorry, all other products are sold.</h4>
        }

    </div>
</div>
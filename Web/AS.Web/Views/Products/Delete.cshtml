<div class="mt-3 mb-5">
    <h1 class="text-center beginn">Delete Product</h1>
     <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Delete" disabled>
        <div class="form-group name">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" id="name" placeholder="Name..." asp-for="Name" disabled>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group price">
            <label asp-for="Price"></label>
            <input type="number" class="form-control" id="price" placeholder="Price..." asp-for="Price" disabled>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group description">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" id="description" placeholder="Description..." asp-for="Description" disabled>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center category">Category</h4>
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="form-check form-check-inline coat">
                <input class="form-check-input" type="radio" name="category" id="coat" value="Coat" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="coat">Coat</label>
            </div>
            <div class="form-check form-check-inline puffer">
                <input class="form-check-input" type="radio" name="category" id="puffer" value="Puffer" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="puffer">Puffer</label>
            </div>
            <div class="form-check form-check-inline jacket">
                <input class="form-check-input" type="radio" name="category" id="jacket" value="Jacket" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="jacket">Jacket</label>
            </div>
            <div class="form-check form-check-inline jeans">
                <input class="form-check-input" type="radio" name="category" id="jeans" value="Jeans" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="jeans">Jeans</label>
            </div>
            <div class="form-check form-check-inline tshirt">
                <input class="form-check-input" type="radio" name="category" id="tshirt" value="T-shirt" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="tshirt">T-Shirt</label>
            </div>
            <div class="form-check form-check-inline other">
                <input class="form-check-input" type="radio" name="category" id="other" value="Other" asp-for="@Model.Category" disabled>
                <label class="form-check-label" for="other">Other</label>
            </div>
        </div>
        <div>
            <img class="image" src="~/Images/@Model.ImageUrl" width="200" height="300"/>
        </div>
        <div class="button-holder mt-4 w-25 mx-auto d-flex justify-content-around">
            <button type="submit" class="btn update">Delete</button>
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" class="btn cancel">Cancel</a>
        </div>

    </form>
</div>
<div class="mt-3 mb-5">
    <h1 class="text-center begining">Create Product</h1>
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group name">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" id="name" placeholder="Name..." asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group price">
            <label asp-for="Price"></label>
            <input type="number" class="form-control" id="price" placeholder="Price..." asp-for="Price" min="0">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group description">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" id="description" placeholder="Description..." asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center category">Category</h4>
        <div class="product-type-holder mt-4 d-flex justify-content-around categories">
            <div class="form-check form-check-inline coat">
                <input class="form-check-input" type="radio" name="category" id="coat" value="Coat" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="coat">Coat</label>
            </div>
            <div class="form-check form-check-inline puffer">
                <input class="form-check-input" type="radio" name="category" id="puffer" value="Puffer" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="puffer">Puffer</label>
            </div>
            <div class="form-check form-check-inline jacket">
                <input class="form-check-input" type="radio" name="category" id="jacket" value="Jacket" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="jacket">Jacket</label>
            </div>
            <div class="form-check form-check-inline jeans">
                <input class="form-check-input" type="radio" name="category" id="jeans" value="Jeans" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="jeans">Jeans</label>
            </div>
            <div class="form-check form-check-inline tshirt">
                <input class="form-check-input" type="radio" name="category" id="tshirt" value="T-shirt" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="tshirt">T-Shirt</label>
            </div>
            <div class="form-check form-check-inline other">
                <input class="form-check-input" type="radio" name="category" id="other" value="Other" asp-for="@Model.Category" enabled>
                <label class="form-check-label" for="other">Other</label>
            </div>
        </div>
        <div class="product-type-holder mt-4 d-flex justify-content-around gender">
            <div class="form-check form-check-inline man">
                <input class="form-check-input" type="radio" name="genderType" id="man" value="Man" asp-for="@Model.GenderType" enabled>
                <label class="form-check-label" for="man">Man</label>
            </div>
            <div class="form-check form-check-inline woman">
                <input class="form-check-input" type="radio" name="genderType" id="woman" value="Woman" asp-for="@Model.GenderType" enabled>
                <label class="form-check-label" for="woman">Woman</label>
            </div>
            <div class="form-check form-check-inline kid">
                <input class="form-check-input" type="radio" name="genderType" id="kids" value="Kids" asp-for="@Model.GenderType" enabled>
                <label class="form-check-label" for="kids">Kids</label>
            </div>
        </div>
        <div class="form-group image">
            <label asp-for="Image" class="control-label"></label>
            <input class="form-control" id="image" asp-for="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group quantity">
            <label asp-for="Quantity"></label>
            <input type="number" class="form-control" id="quantity" placeholder="Count..." asp-for="Quantity" min="1">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="button-holder mt-2 d-flex justify-content-center button">
            <button type="submit" class="btn">Create</button>
        </div>
    </form>
</div>
@model ProductCreateViewModel

<div class="mt-3 mb-5">
    <h1 class="text-center">Create Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Create">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" id="name" placeholder="Name..." asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" class="form-control" id="price" placeholder="Price..." asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" id="description" placeholder="Description..." asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center">Category</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="food" value="Food">
                <label class="form-check-label" for="food">Food</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="domestic" value="Domestic">
                <label class="form-check-label" for="domestic">Domestic</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="health" value="Health">
                <label class="form-check-label" for="health">Health</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="cosmetic" value="Cosmetic">
                <label class="form-check-label" for="cosmetic">Cosmetic</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="other" value="Other" checked>
                <label class="form-check-label" for="other">Other</label>
            </div>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit" class="btn">Create</button>
        </div>
    </form>
</div>